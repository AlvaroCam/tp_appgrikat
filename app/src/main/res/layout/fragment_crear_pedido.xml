<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPedidoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="REGISTRAR PEDIDO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/create_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#070707"
                android:text="Registrar"
                android:textColor="#FBFBFB" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Fecha de envío"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/shipping_date_create"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="none" />

                    <Button
                        android:id="@+id/shipping_date_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        android:backgroundTint="#7C022B" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tipo de pedido"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/order_type_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>
                <!--android:entries="@array/order_types" />-->
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:text="Ubicación"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18dp"
               android:textStyle="bold" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:orientation="vertical">
               <EditText
                   android:id="@+id/address_create"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Dirección" />
               <Spinner
                   android:id="@+id/districts_list"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <!-- android:entries="@array/districts" -->
               <EditText
                   android:id="@+id/reference_create"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Referencia (opcional)" />
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:text="Detalle de pedido"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18dp"
               android:textStyle="bold" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:orientation="horizontal">

               <Spinner
                   android:id="@+id/products_list_create"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <!-- android:entries="@array/products" />-->

               <EditText
                   android:id="@+id/product_quantity"
                   android:layout_width="170dp"
                   android:layout_height="match_parent"
                   android:hint="Cantidad"
                   android:inputType="number"
                   android:maxLength="3"
                   android:textSize="16dp" />

               <Button
                   android:id="@+id/add_order"
                   android:layout_height="50dp"
                   android:layout_width="50dp"
                   android:background="@android:drawable/ic_menu_add"
                   android:backgroundTint="#000000" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Producto"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimaryDark"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Cantidad"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimaryDark"
                   android:textStyle="bold" />

           </LinearLayout>


           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recycler_view_products"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />

       </LinearLayout>

   </androidx.cardview.widget.CardView>

</LinearLayout>

</FrameLayout>