<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleOfertasPorLocal"
    android:background="#FDEBD0">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarOfertasxLocal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="#F39C12"/>



    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/NombreLocal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nombre del Local"
        android:gravity="center"
        android:textSize="60px"
        android:textStyle="bold"
        android:textColor="#1D8348"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOfertas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>