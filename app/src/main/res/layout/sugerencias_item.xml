<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Â¡SUGERENCIAS DEL DIA!"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="85px"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_sugerencias_id"
        android:layout_width="200dp"
        android:layout_height="323dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="321dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sugerencias_img_view"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@android:color/background_dark"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/sugerencias_title_id"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Titulo de Oferta"
                android:textColor="#2d2d2d"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/descripcion_sugerencias_id"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>