<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_locales_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
   >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:background="@drawable/fondo9">
        <ImageView
            android:id="@+id/local_img_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/Local_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:text="Medium Text"
            android:gravity="left|bottom"
            android:textSize="60px"
            android:textColor="#78281F"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descripcion_local_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:text="Medium Text"
            android:textSize="50px"
            android:textColor="#78281F"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/direccion_local_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:text="Medium Text"
            android:textSize="42px"
            android:textColor="#8E6F09"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>